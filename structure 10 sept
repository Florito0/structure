    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- CONFIGURATION & INITIAL STATE ---
            const structureInventory = {
                "10M_H5": { name: "10*10 Arquée H5", cols: 1, startCol: 1 },
                "10M_H4": { name: "10*50 Arquée H4", cols: 1, startCol: 2 },
                "12M":    { name: "12*25 Arquée H3", cols: 1, startCol: 3 },
                "15M":    { name: "15M Arquée",      cols: 8, startCol: 4, sub: ["H3", "H3", "H3", "H3", "H3", "H3", "H3/H4", "H3/H4"], fermes: 51 },
                "20M":    { name: "20M Arquée",      cols: 7, startCol: 13, sub: ["H3", "H3", "H3", "H3", "H3/H4", "H3/H4", "H3/H4"], fermes: 54 },
                "25M":    { name: "25M Arquée",      cols: 3, startCol: 20, sub: ["H3", "H3", "H3"], fermes: 54 },
                "Domes":  { name: "Domes",           cols: 1, startCol: 24, count: 89 },
            };

            let reservations = [];
            let currentDate = new Date(2026, 0, 1); // Start at January 1, 2026
            let currentView = 'week';

            // --- DOM ELEMENTS ---
            const planningGrid = document.getElementById('planningGrid');
            const currentMonthYearEl = document.getElementById('currentMonthYear');
            const form = document.getElementById('reservationForm');
            const longueurSelect = document.getElementById('longueur');

            // --- INITIALIZATION ---
            populateLongueurOptions();
            initializeDatePickers(); 
            render();

            // --- EVENT LISTENERS ---
            document.getElementById('weekViewBtn').addEventListener('click', () => switchView('week'));
            document.getElementById('dayViewBtn').addEventListener('click', () => switchView('day'));
            form.addEventListener('submit', handleFormSubmit);

            // --- FUNCTIONS ---

            function initializeDatePickers() {
                const config = {
                    mode: "range",
                    dateFormat: "d/m/Y", 
                    locale: "fr",
                    minDate: "01/01/2026",
                    maxDate: "31/12/2026"
                };
                flatpickr("#dateManif", config);
                flatpickr("#dateMontage", config);
                flatpickr("#dateDemontage", config);
            }
            
            function switchView(view) {
                currentView = view;
                document.getElementById('weekViewBtn').classList.toggle('active', view === 'week');
                document.getElementById('dayViewBtn').classList.toggle('active', view === 'day');
                render();
            }

            function getFrenchPublicHolidays(year) {
                const holidays = new Set();
                const easter = getEaster(year);
                const yearStr = year.toString();
                holidays.add(`${yearStr}-01-01`); holidays.add(`${yearStr}-05-01`); holidays.add(`${yearStr}-05-08`);
                holidays.add(`${yearStr}-07-14`); holidays.add(`${yearStr}-08-15`); holidays.add(`${yearStr}-11-01`);
                holidays.add(`${yearStr}-11-11`); holidays.add(`${yearStr}-12-25`);
                const addDays = (d, days) => { const r = new Date(d); r.setDate(r.getDate() + days); return r.toISOString().split('T')[0]; };
                holidays.add(addDays(easter, 1)); holidays.add(addDays(easter, 39)); holidays.add(addDays(easter, 50));
                return holidays;
            }

            function getEaster(year) {
                const a = year % 19, b = Math.floor(year / 100), c = year % 100, d = Math.floor(b / 4), e = b % 4;
                const f = Math.floor((b + 8) / 25), g = Math.floor((b - f + 1) / 3), h = (19 * a + b - d - g + 15) % 30;
                const i = Math.floor(c / 4), k = c % 4, l = (32 + 2 * e + 2 * i - h - k) % 7;
                const m = Math.floor((a + 11 * h + 22 * l) / 451);
                const month = Math.floor((h + l - 7 * m + 114) / 31), day = ((h + l - 7 * m + 114) % 31) + 1;
                return new Date(year, month - 1, day);
            }

            function populateLongueurOptions() {
                longueurSelect.innerHTML = '';
                for (let i = 0; i <= 100; i += 5) {
                    const option = document.createElement('option');
                    option.value = i;
                    option.textContent = `${i}m`;
                    longueurSelect.appendChild(option);
                }
            }
            
            function getDatesForView() {
                const dates = [];
                const year = 2026;
                const start = new Date(year, 0, 1); // January 1, 2026

                if (currentView === 'week') {
                    // Start from the first Saturday of 2026
                    const firstSaturday = new Date(year, 0, 1);
                    while (firstSaturday.getDay() !== 6) {
                        firstSaturday.setDate(firstSaturday.getDate() + 1);
                    }
                    // Generate all Saturdays of 2026
                    for (let d = new Date(firstSaturday); d.getFullYear() === year; d.setDate(d.getDate() + 7)) {
                        dates.push(new Date(d));
                    }
                } else {
                    // Generate all days of 2026
                    for (let d = new Date(start); d.getFullYear() === year; d.setDate(d.getDate() + 1)) {
                        dates.push(new Date(d));
                    }
                    if (new Date(year + 1, 0, 1).getFullYear() === year + 1) {
                        dates.push(new Date(year + 1, 0, 1)); // Include Jan 1, 2027 for continuity
                    }
                }
                return dates;
            }

            function render() {
                planningGrid.innerHTML = '';
                const dates = getDatesForView();
                currentMonthYearEl.textContent = 'Année 2026';
                generateGridHeader();
                generateGridBody(dates);
                renderReservations(dates);
            }
            
            function generateGridHeader() {
                const thead = document.createElement('thead');
                const mainHeaderRow = document.createElement('tr'), subHeaderRow = document.createElement('tr');
                const createTh = (text, colspan = 1, className = '') => {
                    const th = document.createElement('th'); th.textContent = text; th.colSpan = colspan;
                    if (className) th.classList.add(className); return th;
                };

                mainHeaderRow.appendChild(createTh(currentView === 'week' ? 'Semaine' : 'Date', 1, 'main-header'));
                subHeaderRow.appendChild(createTh('', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(structureInventory['10M_H5'].name, 1, 'main-header')); subHeaderRow.appendChild(createTh('', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(structureInventory['10M_H4'].name, 1, 'main-header')); subHeaderRow.appendChild(createTh('', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(structureInventory['12M'].name, 1, 'main-header')); subHeaderRow.appendChild(createTh('', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(structureInventory['15M'].name, structureInventory['15M'].cols, 'main-header'));
                (structureInventory['15M'].sub || []).forEach(sub => subHeaderRow.appendChild(createTh(sub, 1, 'sub-header')));
                mainHeaderRow.appendChild(createTh('Fermes', 1, 'main-header')); subHeaderRow.appendChild(createTh('51', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(currentView === 'week' ? 'Semaine' : 'Date', 1, 'main-header')); subHeaderRow.appendChild(createTh('', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(structureInventory['20M'].name, structureInventory['20M'].cols, 'main-header'));
                (structureInventory['20M'].sub || []).forEach(sub => subHeaderRow.appendChild(createTh(sub, 1, 'sub-header')));
                mainHeaderRow.appendChild(createTh(structureInventory['25M'].name, structureInventory['25M'].cols, 'main-header'));
                (structureInventory['25M'].sub || []).forEach(sub => subHeaderRow.appendChild(createTh(sub, 1, 'sub-header')));
                mainHeaderRow.appendChild(createTh('Fermes', 1, 'main-header')); subHeaderRow.appendChild(createTh('54', 1, 'sub-header'));
                mainHeaderRow.appendChild(createTh(structureInventory['Domes'].name, structureInventory['Domes'].cols, 'main-header'));
                subHeaderRow.appendChild(createTh(structureInventory['Domes'].count.toString(), 1, 'sub-header'));
                thead.appendChild(mainHeaderRow); thead.appendChild(subHeaderRow);
                planningGrid.appendChild(thead);
            }
            
            function generateGridBody(dates) {
                const tbody = document.createElement('tbody');
                const currentYear = 2026;
                const holidays = getFrenchPublicHolidays(currentYear);
                const nextYearHolidays = getFrenchPublicHolidays(currentYear + 1);
                nextYearHolidays.forEach(h => holidays.add(h));

                dates.forEach(date => {
                    const dateString = date.toISOString().split('T')[0];
                    const tr = document.createElement('tr');
                    tr.dataset.date = dateString;
                    const day = date.getDay();
                    if (day === 0 || day === 6) tr.classList.add('weekend');
                    if (holidays.has(dateString)) tr.classList.add('holiday');
                    const dateLocale = currentView === 'week' ? 
                        `Sem. ${date.toLocaleDateString('fr-FR', { day: 'numeric', month: 'short' })}` : 
                        date.toLocaleDateString('fr-FR', { weekday: 'short', day: 'numeric', month: 'short' });
                    
                    let rowHtml = `<td class="date-col">${dateLocale}</td>`;
                    rowHtml += `<td></td>`.repeat(Object.values(structureInventory).reduce((acc, s) => acc + s.cols, 0) + 4);
                    tr.innerHTML = rowHtml;

                    tr.cells[structureInventory['15M'].startCol + structureInventory['15M'].cols].classList.add('inventory-col');
                    tr.cells[structureInventory['15M'].startCol + structureInventory['15M'].cols].textContent = structureInventory['15M'].fermes;
                    tr.cells[structureInventory['15M'].startCol + structureInventory['15M'].cols + 1].classList.add('date-col');
                    tr.cells[structureInventory['15M'].startCol + structureInventory['15M'].cols + 1].textContent = dateLocale;
                    tr.cells[structureInventory['25M'].startCol + structureInventory['25M'].cols].classList.add('inventory-col');
                    tr.cells[structureInventory['25M'].startCol + structureInventory['25M'].cols].textContent = structureInventory['25M'].fermes;
                    tr.cells[structureInventory['Domes'].startCol + structureInventory['Domes'].cols].classList.add('inventory-col');
                    tr.cells[structureInventory['Domes'].startCol + structureInventory['Domes'].cols].textContent = structureInventory['Domes'].count;

                    tbody.appendChild(tr);
                });
                planningGrid.appendChild(tbody);
            }

            function findAvailableColumn(structureType, startDate, endDate) {
                const structure = structureInventory[structureType];
                if (!structure) return -1;

                const start = new Date(startDate);
                const end = new Date(endDate);
                
                for (let i = 0; i < structure.cols; i++) {
                    const colIndex = structure.startCol + i;
                    let isAvailable = true;

                    for (const res of reservations) {
                        if (res.columnIndex === colIndex) {
                            const resStart = new Date(res.overallStartDate);
                            const resEnd = new Date(res.overallEndDate);
                            if (start <= resEnd && end >= resStart) {
                                isAvailable = false;
                                break;
                            }
                        }
                    }
                    if (isAvailable) {
                        return colIndex;
                    }
                }
                return -1;
            }
            
            function handleFormSubmit(event) {
                event.preventDefault();
                
                const parseDateRange = (inputID) => {
                    const value = document.getElementById(inputID).value;
                    if (!value) return { start: null, end: null };
                    const dates = value.split(' au ');
                    const toISODate = (dmy) => {
                        const parts = dmy.split('/');
                        return `${parts[2]}-${parts[1].padStart(2, '0')}-${parts[0].padStart(2, '0')}`;
                    };
                    return { start: toISODate(dates[0]), end: toISODate(dates.length > 1 ? dates[1] : dates[0]) };
                };

                const manif = parseDateRange('dateManif');
                const montage = parseDateRange('dateMontage');
                const demontage = parseDateRange('dateDemontage');

                if (!manif.start || !montage.start || !demontage.start) {
                    alert("Veuillez sélectionner des dates pour toutes les périodes.");
                    return;
                }

                const data = {
                    id: Date.now(),
                    contrat: document.getElementById('contrat').value,
                    ville: document.getElementById('ville').value,
                    structure: document.getElementById('structure').value,
                    longueur: parseInt(document.getElementById('longueur').value, 10),
                    hauteur: document.getElementById('hauteur').value,
                    plancher: document.getElementById('plancher').value,
                    dateManifStart: manif.start, dateManifEnd: manif.end,
                    dateMontageStart: montage.start, dateMontageEnd: montage.end,
                    dateDemontageStart: demontage.start, dateDemontageEnd: demontage.end,
                    delaiPrep: parseInt(document.getElementById('delaiPrep').value, 10),
                };

                if (new Date(data.dateMontageStart) > new Date(data.dateManifStart) || new Date(data.dateManifEnd) > new Date(data.dateDemontageStart)) {
                    alert("Les dates ne sont pas cohérentes. (Ordre: Montage -> Manif -> Démontage)");
                    return;
                }

                const prepStartDate = new Date(data.dateMontageStart);
                prepStartDate.setDate(prepStartDate.getDate() - data.delaiPrep);
                data.overallStartDate = prepStartDate.toISOString().split('T')[0];
                data.overallEndDate = data.dateDemontageEnd;

                const availableColumn = findAvailableColumn(data.structure, data.overallStartDate, data.overallEndDate);

                if (availableColumn === -1) {
                    alert(`Aucune colonne disponible pour la structure ${data.structure} sur cette période.`);
                    return;
                }

                data.columnIndex = availableColumn;
                
                reservations.push(data);
                render();
                form.reset();
                populateLongueurOptions();
                initializeDatePickers(); 
            }
            
            function renderReservations(visibleDates) {
                document.querySelectorAll('.event-block').forEach(el => el.remove());
                const firstVisibleDate = visibleDates[0], lastVisibleDate = visibleDates[visibleDates.length - 1];
                
                reservations.forEach(res => {
                    const overallStartDate = new Date(res.overallStartDate);
                    const overallEndDate = new Date(res.overallEndDate);

                    if (overallEndDate < firstVisibleDate || overallStartDate > lastVisibleDate) return;
                    
                    createEventBlock(res, 'preparation', overallStartDate, new Date(res.dateMontageStart), res.columnIndex, visibleDates);
                    createEventBlock(res, 'manifestation', new Date(res.dateMontageStart), overallEndDate, res.columnIndex, visibleDates);
                });
            }
            
            function createEventBlock(res, type, startDate, endDate, column, visibleDates) {
                const block = document.createElement('div');
                block.classList.add('event-block');
                const tableHeader = planningGrid.querySelector('thead'), tableBody = planningGrid.querySelector('tbody');
                if (!tableBody) return;

                const gridStartDate = visibleDates[0];
                const effectiveStartDate = startDate > gridStartDate ? startDate : gridStartDate;
                const effectiveEndDate = endDate < visibleDates[visibleDates.length - 1] ? endDate : visibleDates[visibleDates.length - 1];
                
                let startRow, durationRows;

                if (currentView === 'week') {
                    const firstSaturday = new Date(2026, 0, 1);
                    while (firstSaturday.getDay() !== 6) {
                        firstSaturday.setDate(firstSaturday.getDate() + 1);
                    }
                    const weekDiff = (d2, d1) => Math.round((new Date(d2) - new Date(d1)) / (7 * 24 * 60 * 60 * 1000));
                    startRow = weekDiff(effectiveStartDate, firstSaturday);
                    durationRows = weekDiff(effectiveEndDate, effectiveStartDate) + 1;
                } else {
                    const dayDiff = (d2, d1) => Math.round((new Date(d2) - new Date(d1)) / 86400000);
                    startRow = dayDiff(effectiveStartDate, gridStartDate);
                    durationRows = dayDiff(effectiveEndDate, effectiveStartDate) + 1;
                }

                if (startRow < 0 || durationRows <= 0) return;
                if (startRow + durationRows > tableBody.rows.length) {
                    durationRows = tableBody.rows.length - startRow;
                }

                const rowHeight = tableBody.rows[0].offsetHeight;
                const cell = tableBody.rows[startRow].cells[column];
                if (!cell) return;

                block.style.top = `${tableHeader.offsetHeight + startRow * rowHeight}px`;
                block.style.left = `${cell.offsetLeft}px`;
                block.style.width = `${cell.offsetWidth}px`;
                block.style.height = `${durationRows * rowHeight - 2}px`;
                
                if (type === 'preparation') {
                    block.classList.add('preparation-period');
                    block.innerHTML = `<span class="event-line">Préparation</span>`;
                } else {
                    block.classList.add('manifestation-period');
                    const formatRange = (s, e) => {
                         const sd = new Date(s).toLocaleDateString('fr-FR', { day: 'numeric', month: 'short' });
                         const ed = new Date(e).toLocaleDateString('fr-FR', { day: 'numeric', month: 'short' });
                         return sd === ed ? sd : `${sd} - ${ed}`;
                    };
                    block.innerHTML = `
                        <span class="event-line event-contrat">${res.contrat}</span>
                        <span class="event-line event-ville">${res.ville}</span>
                        <span class="event-line">${res.structure.replace('_', ' ')} ${res.longueur}m ${res.hauteur} ${res.plancher}</span>
                        <span class="event-line">M: ${formatRange(res.dateMontageStart, res.dateMontageEnd)}</span>
                        <span class="event-line">D: ${formatRange(res.dateDemontageStart, res.dateDemontageEnd)}</span>
                    `;
                }
                document.getElementById('eventContainer').appendChild(block);
            }
        });
    </script>

</body>
</html>
